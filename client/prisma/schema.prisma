generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Main {
  VisitID          Int     @id @default(autoincrement())
  PatientID        Int
  DoctorID         Int
  ClinicID         Int
  Conversation     String?
  DigiPrescription String?
  Preference       String?
  DietPlan         String?
  ExercisePlan     String?
}

model Consultation {
  VisitID          Int      @id @default(autoincrement())
  PatientID        String   @unique @default(uuid())
  Conversation     String?
  DigiPrescription String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Patient {
  id                 Int      @id @default(autoincrement())
  name               String
  age                String
  dietaryPreferences Json?
  healthGoals        String?
  allergies          String?
  conditions         String?
  keyIssues          String?
  decisions          String?
  medications        String?
  prescriptionText   String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Doctor {
  DoctorID Int    @id @default(autoincrement())
  Name     String
}

model Clinic {
  ClinicID Int    @id @default(autoincrement())
  Name     String
}
